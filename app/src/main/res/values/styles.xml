<resources xmlns:android="http://schemas.android.com/tools">
    <attr name="toolBack" format="reference"/>

    <!-- Base application theme. -->
    <style name="AtHome" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/fore</item>
        <item name="android:colorBackground">@color/back</item>
        <item name="colorPrimary">@color/fore</item>
        <item name="colorPrimaryDark">@color/back</item>
        <item name="colorAccent">@color/fore</item>
        <item name="toolBack">@color/back</item>
        <item name="colorButtonNormal">@color/buttonBack</item>
        <item name="colorControlNormal">@color/fore</item>
        <item name="colorControlActivated">@color/fore</item>
        <item name="colorControlHighlight">@color/fore</item>
        <item name="android:editTextColor">@color/fore</item>
        <item name="icon_color">@color/fore_dim</item>
        <item name="edit_color">@color/dialog_fore</item>
    </style>

    <style name="AtHome.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/fore</item>
        <item name="android:colorBackground">@color/back</item>
    </style>

    <style name="AlertDialogCustom" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/dialog_back</item>
        <item name="android:textColor">@color/back</item>
        <item name="android:textColorPrimary">@color/back</item>
        <item name="android:colorAccent">@color/back</item>
        <item name="android:colorBackground">@color/fore</item>
    </style>

    <style name="AtHome_Picker" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/dialog_fore</item>
    </style>

</resources>
