<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System status: "
            android:textSize="24dp"
            android:textColor="@color/dialog_fore" />

        <TextView
            android:id="@+id/hold_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="?"
            android:textSize="24dp"
            android:textColor="@color/dialog_fore" />

        </LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" >

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:paddingTop="75dp"
			android:text="Temp: "
            android:textSize="20dp"
            android:textColor="@color/dialog_fore" />

		<NumberPicker
			android:id="@+id/hold_temp"
            android:theme="@style/AtHome_Picker"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

        </LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
		>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:textSize="14sp"
			android:text="Hold until: "
            android:textColor="@color/dialog_fore" />
		<RadioGroup
            android:id="@+id/hold_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
            <RadioButton
                android:id="@+id/hold_temporary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next period" />
            <RadioButton
                android:id="@+id/hold_permanent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forever" />
            </RadioGroup>

		</LinearLayout>

	<LinearLayout
		android:gravity="right"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingRight="30dp"
		android:paddingTop="20dp"
		android:paddingBottom="20dp" >

		<Button
			android:id="@+id/cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingRight="20dp"
			android:text="Cancel"
            android:textColor="@color/dialog_fore"
            android:background="@color/dialog_back" />
		<Button
			android:id="@+id/hold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingRight="20dp"
			android:text="Hold"
            android:textColor="@color/dialog_fore"
            android:background="@color/dialog_back" />
        <Button
            android:id="@+id/resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resume"
            android:textColor="@color/dialog_fore"
            android:background="@color/dialog_back" />

        </LinearLayout>

</LinearLayout>
