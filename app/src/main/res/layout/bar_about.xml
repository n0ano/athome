<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" >

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="AtHome"
            android:textSize="20dp"
            android:textColor="@color/dialog_fore" />

		<TextView
			android:id="@+id/about_version"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
			android:text=""
            android:textColor="@color/dialog_fore" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:paddingTop="10dp"
			android:text="Copyrights:"
            android:textColor="@color/dialog_fore" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:paddingLeft="20dp"
			android:text="Project Copyright Don Dugger"
            android:textColor="@color/dialog_fore" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:paddingLeft="20dp"
			android:text="Grid icon: power line by Hayden Kerrisk from the Noun Project"
            android:textColor="@color/dialog_fore" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:paddingLeft="20dp"
			android:text="House icon: House by Mahmure Alp from the Noun Project"
            android:textColor="@color/dialog_fore" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:paddingLeft="20dp"
			android:text="Panel icon: solar by Ralf Schmitzer from the Noun Project" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:paddingLeft="20dp"
			android:text="Thermometer icon: Temperature by Bakunetsu Kaito from the Noun Project"
            android:textColor="@color/dialog_fore" />

		</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <CheckBox
            android:id="@+id/about_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:textSize="14sp"
			android:text=" Debugging prints"
            android:textColor="@color/dialog_fore" />

		</LinearLayout>

	<LinearLayout
		android:gravity="right"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingRight="30dp"
		android:paddingTop="20dp"
		android:paddingBottom="20dp" >

		<Button
			android:id="@+id/ok"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Ok"
            android:textColor="@color/dialog_fore"
            android:background="@color/dialog_back" />

		</LinearLayout>

</LinearLayout>
