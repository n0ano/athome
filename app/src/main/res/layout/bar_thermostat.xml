<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" >

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Weather"
            android:textSize="20dp"
            android:textColor="@color/dialog_fore" />

        </LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
		>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:textSize="14sp"
			android:text="Layout: "
            android:textColor="@color/dialog_fore" />
		<RadioGroup
            android:id="@+id/weather_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >
            <RadioButton
                android:id="@+id/weather_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None" />
            <RadioButton
                android:id="@+id/weather_tablet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tablet" />
            <RadioButton
                android:id="@+id/weather_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone" />
            </RadioGroup>

		</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <CheckBox
            android:id="@+id/weather_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text=" Progress bar"
            android:textColor="@color/dialog_fore" />

        </LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:id="@+id/weather_ecobee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="ecoBee Configuration"
            android:textColor="@color/dialog_fore"
            android:background="@color/buttonBack" />

        </LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:id="@+id/weather_under"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Weather Underground Configuration"
            android:textColor="@color/dialog_fore"
            android:background="@color/buttonBack" />

        </LinearLayout>

	<LinearLayout
		android:gravity="right"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingRight="30dp"
		android:paddingTop="20dp"
		android:paddingBottom="20dp" >

		<Button
			android:id="@+id/cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingRight="30dp"
			android:text="Cancel"
            android:textColor="@color/dialog_fore"
            android:background="@color/dialog_back" />
		<Button
			android:id="@+id/ok"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Ok"
            android:textColor="@color/dialog_fore"
            android:background="@color/dialog_back" />

		</LinearLayout>

</LinearLayout>
