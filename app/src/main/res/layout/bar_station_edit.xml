<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:text="Edit weather station"
        android:textSize="20dp"
        android:textColor="@color/dialog_fore" />

    <LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Type:"
            android:textColor="@color/dialog_fore" />

        <TextView
			android:id="@+id/weather_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/dialog_fore" />

        </LinearLayout>

    <LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Name:"
            android:textColor="@color/dialog_fore" />

        <EditText
			android:id="@+id/weather_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:paddingLeft="4dp"
            android:textSize="14sp"
            android:textColor="@color/dialog_fore" />

        </LinearLayout>

    <LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Id:"
            android:textColor="@color/dialog_fore" />

        <EditText
			android:id="@+id/weather_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:paddingLeft="4dp"
            android:textSize="14sp"
            android:textColor="@color/dialog_fore" />

        </LinearLayout>

    <LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Key:"
            android:textColor="@color/dialog_fore" />

        <EditText
			android:id="@+id/weather_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:paddingLeft="4dp"
            android:textSize="14sp"
            android:textColor="@color/dialog_fore" />

        </LinearLayout>

    <CheckBox
        android:id="@+id/weather_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:text="Delete station" />

	<LinearLayout
		android:gravity="right"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingRight="30dp"
		android:paddingTop="20dp"
		android:paddingBottom="20dp" >

		<Button
			android:id="@+id/cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingRight="30dp"
			android:text="Cancel"
            android:textColor="@color/dialog_fore"
            android:background="@color/dialog_back" />
		<Button
			android:id="@+id/ok"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Ok"
            android:textColor="@color/dialog_fore"
            android:background="@color/dialog_back" />

		</LinearLayout>

</LinearLayout>
